<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                style="@style/signTextView"
                android:layout_marginBottom="10dp"
                android:text="작업 현장 명" />

            <EditText
                android:id="@+id/title"
                style="@style/signEditText"
                android:layout_marginBottom="10dp" />

            <TextView
                style="@style/signTextView"
                android:layout_marginBottom="10dp"
                android:text="현장 지역" />

            <TextView
                android:id="@+id/location"
                style="@style/signTextView"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@color/mainColor"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="지역 검색"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/real_location"
                style="@style/signTextView"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="#fff"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text=""
                android:ellipsize="none"
                android:scrollHorizontally="false"
                android:singleLine="true"
                android:textColor="#000" />

            <TextView
                style="@style/signTextView"
                android:layout_marginBottom="10dp"
                android:text="공사 기간" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_day"
                    style="@style/signTextView"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@color/mainColor"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="시작 날짜 선택"
                    android:textColor="#fff" />

                <TextView
                    style="@style/signTextView"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="부터"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/end_day"
                    style="@style/signTextView"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@color/mainColor"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="종료 날짜 선택"
                    android:textColor="#fff" />

            </LinearLayout>

            <TextView
                style="@style/signTextView"
                android:layout_marginBottom="10dp"
                android:text="작업 희망일" />

            <TextView
                android:id="@+id/job_day"
                style="@style/signTextView"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@color/mainColor"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="작업 희망 날짜 선택"
                android:textColor="#fff" />

            <TextView
                style="@style/signTextView"
                android:layout_marginBottom="10dp"
                android:text="희망 인력 직종" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/magazine"
                    style="@style/signTextView"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/textview_selector"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="잡부"
                    android:textColor="@drawable/textview_selector_text" />

                <TextView
                    android:id="@+id/tidal_ball"
                    style="@style/signTextView"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/textview_selector"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="조력공"
                    android:textColor="@drawable/textview_selector_text" />

                <TextView
                    android:id="@+id/technician"
                    style="@style/signTextView"
                    android:layout_width="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/textview_selector"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="기술공"
                    android:textColor="@drawable/textview_selector_text" />

            </LinearLayout>

            <TextView
                style="@style/signTextView"
                android:layout_marginBottom="10dp"
                android:text="모집 내용" />

            <EditText
                android:id="@+id/recruitment_contents"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                android:background="@drawable/edit_text_gray_border_white_background"
                android:padding="10dp" />

            <TextView
                style="@style/signTextView"
                android:layout_marginBottom="10dp"
                android:text="작업 임금 (단위 원)" />

            <EditText
                android:id="@+id/money"
                style="@style/signEditText"
                android:layout_marginBottom="30dp"
                android:gravity="right"
                android:paddingRight="10dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/mainColor"
                android:onClick="nextBtn"
                android:text="다음 단계"
                android:textColor="#fff"
                android:textSize="14dp"
                android:textStyle="bold" />


        </LinearLayout>

    </ScrollView>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webview"
        android:visibility="gone">

    </WebView>

</RelativeLayout>